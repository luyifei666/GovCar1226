<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/order_num"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:paddingLeft="@dimen/dp_10"
            android:textStyle="italic"
            android:typeface="serif"
            android:textSize="18sp"
            android:textColorHighlight="@color/black"
            android:text="单号：1234567890"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <!--<TextView-->
            <!--android:id="@+id/tweetName"-->
            <!--android:paddingLeft="@dimen/dp_10"-->
            <!--style="@style/tweetName"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="用车人：张三"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:layout_below="@+id/img"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"/>-->

        <TextView
            android:id="@+id/driverName"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾驶员：张三"
            android:textColor="@android:color/darker_gray"
            android:gravity="center|left"
            android:layout_below="@+id/order_num"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:id="@+id/carNum"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号码：云HGW001"
            android:textColor="@android:color/darker_gray"
            android:gravity="center|left"
            android:layout_below="@+id/driverName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:id="@+id/useTime"
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用车时间：2018-11-21 08:30"
            android:textColor="@android:color/darker_gray"
            android:gravity="center|left"
            android:layout_below="@+id/carNum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:text="文山市会务中心"
            android:textColor="@android:color/darker_gray"
            android:drawableLeft="@drawable/icon_gcoding"
            android:gravity="center|left"
            android:layout_below="@+id/useTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:text="富宁县白色商业区"
            android:textColor="@android:color/darker_gray"
            android:drawableLeft="@drawable/icon_gcoding"
            android:gravity="center|left"
            android:layout_below="@+id/start"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/order_num"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:paddingRight="@dimen/dp_10"
            android:text="待评价"
            android:textSize="12sp"
            android:textColor="@color/webview_progress_color" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

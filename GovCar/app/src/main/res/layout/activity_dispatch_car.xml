<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_num"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:paddingLeft="18dp"
                    android:text="订单号：1234567890987654321"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/order_status"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:paddingLeft="18dp"
                    android:text="待审批"
                    android:textColor="@color/webview_progress_color"
                    android:textSize="15sp"
                    android:textStyle="italic" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:paddingLeft="18dp"
                    android:text="任务信息"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv3"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/line_color" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_use_type0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="用车类型"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_use_type0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_use_type0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_use_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text="越野车"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_num0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="车辆数目"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_num0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_num0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text="1"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_use_property0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="用车性质"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_use_property0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_use_property0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_use_property"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text="文件传递"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_use_starttime0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="出车时间"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_use_starttime0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_use_starttime0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_use_starttime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text="2018-09-26 09:30"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_use_backtime0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="归队时间"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_use_backtime0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_use_backtime0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_use_backtime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text=" 2018-09-26 17:00"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_use_time0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="用车时长"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_use_time0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_use_time0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_use_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text="1天"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_user_num0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="用车人数"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_user_num0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_user_num0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_user_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text="4 人"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_car_user_together0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="随车人员"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rl_car_user_together0"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_car_user_together0"
                    android:background="@drawable/search_bg">

                    <TextView
                        android:id="@+id/tv_car_user_together"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:text=" 张三 、李四 、王五"
                        android:textSize="13sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_car_use_enclosure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:paddingLeft="18dp"
                    android:text="选择车辆及驾驶员"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/line_color" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_border"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="64dp"
                    android:background="@drawable/add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"
                    android:text="(点击此处选择车辆和驾驶员)"
                    android:textSize="9sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_car_use_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:paddingLeft="18dp"
                    android:text="已选车辆及驾驶员"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv5"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/line_color" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" />

            <LinearLayout
                android:id="@+id/btn_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_reject"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:padding="8dp"
                    android:text="驳回申请"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_pass"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:padding="8dp"
                    android:text="审批通过"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
